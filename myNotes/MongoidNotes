# Valid options on "embedded" 1-to-n relations on the "parent" side are:
	as (:macro)
	cascade_callbacks (true, false)
	cyclic (true, false)
	order
	versioned
	store_as
	class_name ("class name")
	extend
	inverse_class_name ("class name")
	inverse_of (:macro)
	name
	relation
	validate (true, false)

# Valid options on "embedded" 1-to-n relations on the "child/dependent" side are:
	autobuild (true, false)
	cyclic (true, false)
	polymorphic (true, false)
	class_name ("class name")
	extend
	inverse_class_name ("class name")
	inverse_of (:macro)
	name
	relation 
	validate (true, false)
	
	
